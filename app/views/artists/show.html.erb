<div class="ui card">
  <div class="image">
    <img src="https://robohash.org/<%= @artist.avatar %>?set=set5" />
  </div>
  <div class="content">
    <p class="header">
      <%= @artist.first_name %> <%= @artist.last_name %>
    </p>
  </div>
  <div class="extra content">
    <%= link_to "Edit", edit_artist_path(@artist), class: "ui button blue" %> 
    <%= link_to "Back", artists_path, class: "ui button grey" %> 
  </div>
</div>