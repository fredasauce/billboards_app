<h1 class="ui header">Artists</h1>
<%= link_to 'Add Artist', new_artist_path %>

<div class="ui grid">
  <% @artists.each do |artist| %>
    <div class="sixteen wide mobile eight wide tablet four wide computer column">
      <div class="ui card">
        <div class="image">
          <img src="https://robohash.org/<%= artist.avatar %>?set=set2" >
        </div>
        <div class="content">
          <%= link_to artist.full_name, artist_path(artist), class: "header" %>
        </div>
        <div class="extra content">
          <div class="ui two buttons">
            <%= link_to (edit_artist_path(artist)) do %>
              <div class="ui basic green button">
                Edit
              </div>
            <% end %>
            
            <%= link_to(artist_path(artist), method: :delete, data: { confirm: "Are you sure?"}) do %>
              <div class="ui basic red button"> 
                Delete
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>